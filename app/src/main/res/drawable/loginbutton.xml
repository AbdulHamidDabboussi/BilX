<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed state -->
    <item android:drawable="@drawable/button_selected" android:state_pressed="true" android:state_focused="false"/>
    <!-- focused state -->
    <item android:drawable="@drawable/button_focused" android:state_focused="true" android:state_pressed="false"/>
    <!-- default state -->
    <item android:drawable="@drawable/button_normal"/>
</selector>

